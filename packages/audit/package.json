{
    "name": "@markdown-for-agents/audit",
    "version": "0.1.1",
    "description": "Audit token savings when converting HTML to Markdown for AI agents",
    "type": "module",
    "sideEffects": false,
    "engines": {
        "node": ">=20"
    },
    "files": [
        "dist",
        "bin",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "import": "./dist/index.mjs"
        }
    },
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.mts",
    "bin": {
        "agent-markdown-audit": "./bin/agent-markdown-audit.mjs"
    },
    "scripts": {
        "build": "tsdown",
        "dev": "tsdown --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "markdown-for-agents": "workspace:*"
    },
    "keywords": [
        "html",
        "markdown",
        "audit",
        "tokens",
        "ai",
        "agent"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KKonstantinov/markdown-for-agents.git",
        "directory": "packages/audit"
    },
    "homepage": "https://github.com/KKonstantinov/markdown-for-agents/tree/main/packages/audit#readme",
    "bugs": {
        "url": "https://github.com/KKonstantinov/markdown-for-agents/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT"
}
